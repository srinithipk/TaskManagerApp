@model TaskManagerApp.Models.UserTask

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>
        <strong>Description:</strong> @Model.Description<br />
        <strong>Due Date:</strong> @Model.DueDate.ToShortDateString()<br />
        <strong>Is Completed:</strong> @Model.IsCompleted
    </p>
</div>

<form asp-action="DeleteConfirmed" method="post"> <!-- Add method="post" -->
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
